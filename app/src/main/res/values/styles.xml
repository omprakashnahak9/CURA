<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileMenuItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ProfileMenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">@color/profile_menu_icon</item>
    </style>

    <style name="ProfileMenuText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileMenuArrow">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
        <item name="tint">@color/profile_menu_icon</item>
    </style>
</resources>
